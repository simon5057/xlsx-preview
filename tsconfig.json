{
  "compilerOptions": {
    "target": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}